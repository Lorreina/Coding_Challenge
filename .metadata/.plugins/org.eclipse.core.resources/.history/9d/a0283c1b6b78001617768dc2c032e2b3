/**
 * 397. Integer Replacement
 * @author lorreina
 *
 */
public class Integer_Replacement {
    public int integerReplacement(int n) {
        return helper(n);
    }
    
    private int helper(int n) {
        if (n == 1) {
            return 0;
        }
        if (n % 2 == 0) {
            return 1 + helper(n / 2);
        } else {
            return 1 + helper(n - 1);
        }
    }
    
    public static void main(String[] args) {
    	
    }
    
}
