
public class Indeed {
	public int findMaxSum(int[] nums, int threshold) {
		int maxSum = 0;
		int left = 0;
		
		int currSum = 0;
		for (int i = 0; i < nums.length; i++) {
			currSum += nums[i];
			while (currSum > threshold && left < i) {
				
			}
		}
		
		
		
		return maxSum;
	}
	
	public static void main(String[] args) {
		int[] nums = {3, 3, 5, 1, 7};
		int threshold = 10;
		System.out.println(findMaxSum(nums, threshold));
	}
}
