    public static void main(String[] args) {
    	Valid_Word_Abbreviation tmp = new Valid_Word_Abbreviation();
    	String word = "internationalization";
//    	String word = "apple";
//    	String abbr = "a2e";
//    	String abbr = "i12iz4n";
    	String abbr = "i5a11o1";
    	System.out.println(tmp.validWordAbbreviation(word, abbr));
    }
}
