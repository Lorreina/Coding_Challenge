import java.util.ArrayDeque;

public class Police_Children_Distance {
	public int[][] distance(int[][] location) {
		int[][] dis = new int[location.length][location[0].length];
		ArrayDeque<Integer> queue = new ArrayDeque<Integer> ();
		int row = location[0].length;
		for (int i = 0; i < location.length; i++) {
			for (int j = 0; j < location[0].length; j++) {
				if (location[i][j] == 1) {
					queue.push(i * row + j);
					dis[i][j] = 0;
				} else if (location[i][j] == 2) {
					dis[i][j] = -1;
				}
			}
		}
		
		int x, y;
		int index;
		while (!queue.isEmpty()) {
			index = queue.poll();
			x = index / row;
			y = index - x * row;
			// up
			if (x > 0) {
				if (dis[x - 1][y] == 0) {
					dis[x - 1][y] = dis[x][y] + 1;
				}
			}
			// down
			if (x < location.length - 1) {
				if (dis[x + 1][y] == 0) {
					dis[x + 1][y] = dis[x][y] + 1;
				}
			}
			
			// left
			if (y > 0) {
				if (dis[x][y - 1] == 0) {
					dis[x][y - 1] = dis[x][y] + 1;
				}
			}
			
			// down
			if (y < row - 1) {
				if (dis[x][y + 1] == 0) {
					dis[x][y + 1] = dis[x][y] + 1;
				}
			}
		}
		
		return dis;
	}
}
