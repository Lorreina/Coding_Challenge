/**
 * LeetCode
 * 10. Regular Expression Matching
 * @author lorreina
 *
 */
public class Regular_Expression_Matching {
	public boolean isMatch(String s, String p) {
        if (s == null || s.length() == 0) {
            return true;
        }
        
        if (p == null || p.length() == 0) {
            return false;
        }
        
        char[] parray = p.toCharArray();
        int last = 0;
        for (int i = 1; i < parray.length; i++) {
            if (ch[i] == ch[last] && i > last + 1) {
                char tmp = ch[last + 1];
                ch[last + 1] = ch[i];
                ch[i] = tmp;
                last = last + 1;
            } else if (ch[i] != '*' && ch[i] != ch[last]) {
                last = i;
            }
        }
        
        char[] sarray = s.toCharArray();
        for (int i = 0; i < parray.length; i++) {
            if (p[i] == s[0] || p[i] == '.') {
                if (helper(s, p, i)) {
                    return true;
                }
            }
        }
        
        return false;
    }
    
    public boolean helper(char[] s, char[] p, int start) {
        int last = start;
        int j = start;
        int i = 0;
        while (i < s.length && j < p.length) {
            if (p[j] == '*') {
                if (p[last] == s[i]) {
                    i++;
                } else {
                    j++;
                }
            } else {
                // update last
                last = j;
                
                if (s[i] == p[j] || p[j] == '.') {
                    i++;
                    j++;
                } else {
                    return false;
                }
            }
        }
        
        if (i < s.length) {
            return false;
        } else {
            return true;
        }
    }
}
