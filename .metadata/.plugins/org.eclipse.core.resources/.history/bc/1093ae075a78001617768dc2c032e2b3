import java.util.Stack;

/**
 * LeetCode
 * 10. Regular Expression Matching
 * @author lorreina
 *
 */
public class Regular_Expression_Matching {
	public boolean isMatch(String s, String p) {
        if (s == null || s.length() == 0) {
            return true;
        }
        
        if (p == null || p.length() == 0) {
            return false;
        }
        
        char[] parray = p.toCharArray();

        int last = 0;
        for (int i = 1; i < parray.length; i++) {
            if (parray[i] == parray[last] && i > last + 1) {
                char tmp = parray[last + 1];
                parray[last + 1] = parray[i];
                parray[i] = tmp;
                last = last + 1;
            } else if (parray[i] != '*' && parray[i] != parray[last]) {
                last = i;
            }
        }
        
        char[] sarray = s.toCharArray();
        return helper(sarray, parray);
    }
    
    public boolean helper(char[] s, char[] p) {
        int last = 0;
        int j = 0;
        int i = 0;
//        int count = 0;
        Stack<Integer> stack = new Stack<Integer> ();
        while (i < s.length && j < p.length) {
            if (p[j] == '*') {
                if (p[last] == s[i] || p[last] == '.') {
                    i++;
                    stack.add(i);
                } else {
                    j++;
                }
            } else {
                // update last
                last = j;
                
                if (s[i] == p[j] || p[j] == '.') {
                    i++;
                    j++;
                    if (j + 1 < p.length && p[j + 1] == '*') {
                    	stack.clear();
                    	stack.add(i);
                    }
                } else {
                    if (j + 1 < p.length && p[j + 1] == '*') {
                        j = j + 2;
                    } else {
                        return false;
                    }
                }
            }
        }
        
        while (j < p.length) {
        	if (p[j] == '*') {
        		j++;
        	} else if (j + 1 < p.length && p[j + 1] == '*') {
    	        j += 2;
        	} else {
        		if (stack.isEmpty()) {
        			break;
        		}
        		if (p[j] == p[stack.pop()] || p[j] == '.') {
        			j++;
        		} else {
        			break;
        		}
        	}
        }
        
        if (i == s.length && j == p.length) {
        	return true;
        } else {
        	return false;
        }
    }
    
    public static void main(String[] args) {
    	String p = ".*a*a";
    	String s = "bbbba";
    	Regular_Expression_Matching tmp = new Regular_Expression_Matching();
    	System.out.println(tmp.isMatch(s, p));
    }
}
