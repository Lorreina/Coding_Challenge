/**
 * LeetCode
 * 57. Insert Interval
 * @author lorreina
 *
 */
public class Insert_Interval {
	public List<Interval> insert(List<Interval> intervals, Interval newInterval) {
        if (intervals == null || intervals.size() == 0) {
            intervals.add(newInterval);
            return intervals;
        }
        
        int left = 0;
        int right = intervals.size() - 1;
        for (int i = 0; i < intervals.size(); i++) {
            if (newInterval.start <= intervals.get(i).end) {
                left = i;
                break;
            }
        }
        
        for (int i = intervals.size() - 1; i >= 0; i--) {
            if (newInterval.end >= intervals.get(i).start) {
                right = i;
                break;
            }
        }
        
        if (left > right) {
            intervals.add(left, newInterval);
        } else if (left == right) {
            intervals.get(left).start = Math.min(intervals.get(left).start,  newInterval.start);
            intervals.get(left).end = Math.max(intervals.get(left).end,  newInterval.end);
        } else {
            intervals.get(left).end = intervals.get(right).end;
            for (int i = left + 1; i <= right; i++) {
                intervals.remove(left + 1);
            }
        }
        
        return intervals;
    }
	
	public class Interval {
    	int start;
    	int end;
    	Interval() { start = 0; end = 0; }
    	Interval(int s, int e) { start = s; end = e; }
    }
}
