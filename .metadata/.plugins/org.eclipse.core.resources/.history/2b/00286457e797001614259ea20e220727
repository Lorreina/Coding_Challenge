/**
 * LeetCode
 * 
 * @author lorreina
 *
 */
public class Perfect_Suqares {
	public int numSquares(int n) {
        int[] dp = new int[n + 1];
        
        for (int j = 1; j < dp.length; j++) {
            dp[j] = Integer.MAX_VALUE;
        }
        
        for (int i = 1; i < Math.sqrt(n); i++) {
            for (int j = 1; j < dp.length; j++) {
                dp[j] = Math.min(dp[j], dp[j - i * i] + 1);
            }
        }
        
        return dp[n];
    }
}
